@*@model KonoFandom.Models.Card*@
@model KonoFandom.Areas.Admin.ViewModels.CardCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().Name" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().Name" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().Rarity" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().Rarity" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().Rarity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().RarityImagePath" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().RarityImagePath" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().RarityImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().Weapon" class="control-label"></label>
                <select asp-for="@Model.Cards.FirstOrDefault().Weapon" asp-items="Html.GetEnumSelectList<Weapon>()" class="form-control"></select>
                <span asp-validation-for="@Model.Cards.FirstOrDefault().Weapon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().ImagePath" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().ImagePath" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().CharacterID" class="control-label"></label>
                <select asp-for="@Model.Cards.FirstOrDefault().CharacterID" class="form-control" asp-items="ViewBag.CharacterID"></select>
            </div>
            <div id="passive-skill" class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().PassiveSkillID" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().PassiveSkillID" class="control-label" type="hidden"/>
                @*<select asp-for="@Model.Cards.FirstOrDefault().PassiveSkillID" class="form-control" asp-items="ViewBag.PassiveSkillID"></select>*@
                <div id="div1" style="width: 100px; height: 100px; border:1px solid black;"></div>
            </div>
            <h3>Stats</h3>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().HealthPoints" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().HealthPoints" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().HealthPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().PhysicalAttack" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().PhysicalAttack" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().PhysicalAttack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().MagicAttack" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().MagicAttack" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().MagicAttack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().PhysicalDefense" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().PhysicalDefense" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().PhysicalDefense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().MagicDefense" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().MagicDefense" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().MagicDefense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().Agility" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().Agility" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().Agility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().Dexterity" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().Dexterity" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().Dexterity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().Luck" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().Luck" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().Luck" class="text-danger"></span>
            </div>
            <h3>Resistances</h3>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().FireResistance" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().FireResistance" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().FireResistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().WaterResistance" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().WaterResistance" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().WaterResistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().LightningResistance" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().LightningResistance" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().LightningResistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().EarthResistance" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().EarthResistance" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().EarthResistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().WindResistance" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().WindResistance" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().WindResistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().LightResistance" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().LightResistance" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().LightResistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cards.FirstOrDefault().DarkResistance" class="control-label"></label>
                <input asp-for="@Model.Cards.FirstOrDefault().DarkResistance" class="form-control" />
                <span asp-validation-for="@Model.Cards.FirstOrDefault().DarkResistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table class="table table-borderless">
                    <tr>
                        @{
                            int count = 0;
                            List<KonoFandom.Models.AssignedElementData> elements = ViewBag.Elements;
                            if (elements != null)
                            {
                                foreach (var element in elements)
                                {
                                    if (count++ % 5 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedElements" value="@element.ElementID"
                                               @(Html.Raw(element.Assigned ? "checked=\"checked\"" : "")) />
                                        @element.ElementID @: @element.Type
                                    @:</td>
                                }
                            @:</tr>
                        }
                        }
                    </table>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4">
            @{
                var passives = Model.PassiveSkills;
                <div id="skill-gallery">
                    @foreach (var item in passives) // Sort in controller
                    {
                        <img style="width: 100px" src=@item.ImagePath data-name="@item.Name"
                             id="@item.SkillID" title="@item.Description">
                    }
                </div>
            }
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
