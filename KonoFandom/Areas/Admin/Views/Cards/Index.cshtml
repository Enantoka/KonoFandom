@model IEnumerable<KonoFandom.Models.Card>

@{
    ViewData["Title"] = "Index";
}

<h1>Cards</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-hover" id="index">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rarity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Character)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr data-url="@Url.Action("Details", "Cards", new { id = item.CardID })">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rarity)
                    </td>
                    <td>
                        <img src=@Html.DisplayFor(modelItem => item.ImagePath) style="width:200px">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Character.CharacterID)
                    </td>
                    <td data-action="delete">
                        <a asp-action="Delete" asp-route-id="@item.CardID">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
