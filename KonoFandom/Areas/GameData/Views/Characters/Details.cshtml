@model KonoFandom.Areas.GameData.PageModels.CharacterDetails

@{
    ViewData["Title"] = "Details";
}

<div id="main-bg">
    <div class="container" id="main-content">
        <!-- Character Nav Carousel -->
        <div class="container">
            <div id="characterNav" class="carousel slide">
                <ol class="carousel-indicators">

                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="row">
                            <div class="col">
                                <img src="/assets/img/app-store-logo.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="col">
                                <img src="/assets/img/app-store-logo.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="col">
                                <img src="/assets/img/app-store-logo.png" class="d-block w-100" alt="...">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="row">
                            <div class="col">
                                <img src="/assets/img/play-store-logo.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="col">
                                <img src="/assets/img/play-store-logo.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="col">
                                <img src="/assets/img/play-store-logo.png" class="d-block w-100" alt="...">
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#characterNav" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#characterNav" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <h1>@Html.DisplayNameFor(model => model.Character.Biography)</h1>
        <table class="table table-borderless text-center m-auto w-50">
            <tbody>
                <tr>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.Character.Name)
                    </th>
                    <td class="align-middle">
                        @Html.DisplayFor(model => model.Character.Name)
                    </td>
                    <td rowspan="4">
                        <img src=@Html.DisplayFor(model => model.Character.CharacterImagePath) class="img-fluid mx-auto d-block" style="height: 500px" />
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        CV
                    </th>
                    <td class="align-middle">
                        CV's Name'
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        Birthday
                    </th>
                    <td class="align-middle">
                        Birthday Date
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.Character.Weapon)
                    </th>
                    <td class="align-middle">
                        @Html.DisplayFor(model => model.Character.Weapon)
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <p>
                            @Html.DisplayFor(model => model.Character.Biography)
                        </p>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="row justify-content-center">
            <div class="col-6">
                <div class="row mb-4">
                    <div class="col-12 text-center">
                        <div class="row">
                            <div class="col-12 border border-bottom-0">
                                <h5>@Html.DisplayNameFor(model => model.Character.UltimateSkill) - @Html.DisplayFor(model => model.Character.UltimateSkill.Name)</h5>
                            </div>
                        </div>
                        <div class="row mb-4 border align-items-center">
                            <div class="col-4 border-right">
                                <img src=@Html.DisplayFor(model => model.Character.UltimateSkill.ImagePath) class="img-fluid mx-auto d-block">
                            </div>
                            <div class="col-8">
                                <span>@Html.DisplayFor(model => model.Character.UltimateSkill.Description)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-4">
                <h1>Cards</h1>
            </div>
            @{
                if (Model.Character.Cards != null)
                {
                    int count = 0;

                    foreach (var item in Model.Character.Cards.OrderByDescending(c => c.Rarity))
                    {
                        @if (count++ % 4 == 0)
                        {
                            <div class="w-100 d-none d-md-block"></div>
                        }
                        <div class="col-3">
                            <a asp-area="" asp-controller="Cards" asp-action="Details" asp-route-id="@item.CardID">
                                <img src=@Html.DisplayFor(modelItem => item.ImagePath) class="img-fluid" alt="@item.Name">
                            </a>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>