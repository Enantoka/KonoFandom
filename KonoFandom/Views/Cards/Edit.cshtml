@model KonoFandom.Models.Card

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Card</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CardID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rarity" class="control-label"></label>
                <input asp-for="Rarity" class="form-control" />
                <span asp-validation-for="Rarity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharacterID" class="control-label"></label>
                <select asp-for="CharacterID" class="form-control" asp-items="ViewBag.CharacterID"></select>
                <span asp-validation-for="CharacterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassiveSkillID" class="control-label"></label>
                <select asp-for="PassiveSkillID" class="form-control" asp-items="ViewBag.PassiveSkillID"></select>
                <span asp-validation-for="PassiveSkillID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <table class="table table-borderless">
                    <tr>
                        @{
                            int count = 0;
                            List<KonoFandom.Models.AssignedElementData> elements = ViewBag.Elements;
                            if (elements != null)
                            {
                                foreach (var element in elements)
                                {
                                    if (count++ % 5 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox" name="selectedElements" value="@element.ElementID"
                                               @(Html.Raw(element.Assigned ? "checked=\"checked\"" : "")) />
                                        @element.ElementID @: @element.Type
                                    @:</td>
                                }
                            @:</tr>
                        }
                        }
                    </table>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
