@model KonoFandom.ViewModels.CardIndex

@{
    ViewData["Title"] = "Cards";
}

<h1>Card List</h1>

<div class="character-checkbox-filter">
    @foreach (var character in Model.Characters.OrderBy(x => x.CharacterID))
    {
        <input type="checkbox" id="chara_@character.CharacterID"/>
        <label for="chara_@character.CharacterID">@Html.DisplayFor(x => character.Name)</label> // Replace text with image
    }
</div>
<div class="element-checkbox-filter">
    @foreach (var element in Model.Elements.OrderBy(x => x.ElementID))
    {
        <input type="checkbox" id="ele_@element.ElementID" />
        <label for="ele_@element.ElementID">@Html.DisplayFor(x => element.Name)</label>// Replace text with image
    }
</div>

<table class="display" id="sortableTable">
    <thead>
        <tr>
            <th colspan="3"></th>
            <th colspan="8">Stats</th>
            <th colspan="7">Resistance</th>
        </tr>
        <tr>
            <th>Name</th>
            <th>Element</th>
            <th>Rarity</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().HealthPoints)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().PhysicalAttack)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().MagicAttack)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().PhysicalDefense)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().MagicDefense)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().Agility)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().Dexterity)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().Luck)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().FireResistance)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().WaterResistance)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().LightningResistance)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().EarthResistance)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().WindResistance)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().LightResistance)</th>
            <th>@Html.DisplayNameFor(x => x.Cards.FirstOrDefault().DarkResistance)</th>
            <th colspan="3">Skills</th>
            <th>Passive</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var card in Model.Cards.OrderByDescending(c => c.Rarity).ThenBy(c => c.CharacterID))
        {
            <tr>
                <td>@card.Name</td>
                @foreach (var e in card.CardElements)
                {
                    <td>@e.Element.Name</td>
                }
                <td>@card.Rarity</td>
                <td>@card.HealthPoints</td>
                <td>@card.PhysicalAttack</td>
                <td>@card.MagicAttack</td>
                <td>@card.PhysicalDefense</td>
                <td>@card.MagicDefense</td>
                <td>@card.Agility</td>
                <td>@card.Dexterity</td>
                <td>@card.Luck</td>
                <td>@card.FireResistance</td>
                <td>@card.WaterResistance</td>
                <td>@card.LightningResistance</td>
                <td>@card.EarthResistance</td>
                <td>@card.WindResistance</td>
                <td>@card.LightResistance</td>
                <td>@card.DarkResistance</td>
                @foreach (var s in card.CardBasicSkills)
                {
                    <td><img src=@s.BasicSkill.ImagePath class="img-fluid"></td>
                }
                <td><img src=@card.PassiveSkill.ImagePath class="img-fluid"></td>
            </tr>
        }
    </tbody>
</table>

