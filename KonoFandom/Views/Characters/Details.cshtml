@model KonoFandom.ViewModels.CharacterDetails
@{
    ViewData["Title"] = "Details";
    var cardByRarity = Model.Character.Cards.OrderByDescending(c => c.Rarity);
}

<section class="chara-bg">
    <!-- Character Nav Carousel -->
    <div class="container">
        <div id="characterNav" class="carousel slide" data-interval="false">
            <div class="carousel-inner">
                @{
                    var i = 0;
                    while (i < Model.Characters.Count())
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="row">
                                @do
                                {
                                    <div class="col-2">
                                        <a asp-area="GameData" asp-controller="Characters" asp-action="Details" asp-route-id=" @Model.Characters.ElementAt(i).CharacterID">
                                            <img src=@Model.Characters.ElementAt(i).IconImagePath class="img-fluid" alt=" @Model.Characters.ElementAt(i).Name">
                                        </a>
                                    </div>
                                    i++;
                                } while (i % 6 != 0 && i < Model.Characters.Count());
                            </div>
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#characterNav" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#characterNav" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- Character Info -->
    <div class="container" id="main-content">
        <h1>@Html.DisplayNameFor(model => model.Character.Biography)</h1>
        <table class="table table-borderless text-center m-auto w-50">
            <tbody>
                <tr>
                    <th class="align-middle">
                        @Html.DisplayNameFor(model => model.Character.Name)
                    </th>
                    <td class="align-middle">
                        @Html.DisplayFor(model => model.Character.Name)
                    </td>
                    <td rowspan="3">
                        <img src=@Html.DisplayFor(model => model.Character.CharacterImagePath) class="img-fluid mx-auto d-block" />
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        CV
                    </th>
                    <td class="align-middle">
                        CV's Name'
                    </td>
                </tr>
                <tr>
                    <th class="align-middle">
                        Birthday
                    </th>
                    <td class="align-middle">
                        Birthday Date
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <p>
                            @Html.DisplayFor(model => model.Character.Biography)
                        </p>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="row justify-content-center">
            <div class="col-6">
                <div class="row mb-4">
                    <div class="col-12 text-center">
                        <div class="row">
                            <div class="col-12 border border-bottom-0">
                                <h5>@Html.DisplayNameFor(model => model.Character.UltimateSkill) - @Html.DisplayFor(model => model.Character.UltimateSkill.Name)</h5>
                            </div>
                        </div>
                        <div class="row mb-4 border align-items-center">
                            <div class="col-4 border-right">
                                <img src=@Html.DisplayFor(model => model.Character.UltimateSkill.ImagePath) class="img-fluid mx-auto d-block">
                            </div>
                            <div class="col-8">
                                <span>@Html.DisplayFor(model => model.Character.UltimateSkill.Description)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h1>Cards</h1>
        <div class="row" id="cardGallery" data-toggle="modal" data-target="#cardModal">
        @{
            if (Model.Character.Cards != null)
            {
                int count = 0;

                foreach (var item in cardByRarity)
                {
                    @if (count % 4 == 0 && count != 0)
                    {
                        @:</div>
                        @:<div class="row">
                    }
                    <div class="col-3">
                            <img src=@Html.DisplayFor(modelItem => item.ImagePath) class="img-fluid" data-target="#cardCarousel" data-slide-to="@count" alt="@item.Name">
                    </div>
                    count++;
                }
            }
        }
        </div>

        <!-- Modal -->
        <div class="modal fade" id="cardModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div id="cardCarousel" class="carousel slide" data-interval="false">
                            <div class="carousel-inner">
                                @foreach (var card in cardByRarity)
                                {
                                <div class="carousel-item @(cardByRarity.FirstOrDefault() == card ? "active" : "")">
                                    <div class="container text-center">
                                        <div class="row">
                                            <div class="col-5">
                                                <img src=@Html.DisplayFor(modelItem => card.ImagePath) class="img-fluid" alt=@Html.DisplayFor(modelItem => card.Name) />
                                            </div>
                                            <div class="col-7">
                                                <table class="table-bordered w-100">
                                                    <thead>
                                                        <tr>
                                                            <th colspan="4">
                                                                Stats
                                                            </th>
                                                            <th colspan="4">
                                                                Resistances
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayNameFor(modelItem => card.HealthPoints)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.HealthPoints)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.Agility)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.Agility)
                                                            </td>
                                                            <td>
                                                                Fire
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.FireResistance)
                                                            </td>
                                                            <td>
                                                                Wind
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.WindResistance)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayNameFor(modelItem => card.PhysicalAttack)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.PhysicalAttack)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayNameFor(modelItem => card.PhysicalDefense)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.PhysicalDefense)
                                                            </td>
                                                            <td>
                                                                Water
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.WaterResistance)
                                                            </td>
                                                            <td>
                                                                Light
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.LightResistance)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayNameFor(modelItem => card.MagicAttack)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.MagicAttack)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayNameFor(modelItem => card.MagicDefense)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.MagicDefense)
                                                            </td>
                                                            <td>
                                                                Thunder
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.LightningResistance)
                                                            </td>
                                                            <td>
                                                                Dark
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.DarkResistance)
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayNameFor(modelItem => card.Dexterity)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.Dexterity)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayNameFor(modelItem => card.Luck)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.Luck)
                                                            </td>
                                                            <td>
                                                                Earth
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => card.EarthResistance)
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            @{
                                                var count = 0;

                                                @foreach (var skill in card.CardBasicSkills)
                                                {

                                                    if (count % 2 == 0)
                                                    {
                                                    @:</div>
                                                    @:<div class="row mt-2">
                                                    }
                                                    count++;

                                                    <div class="col-6">
                                                        <table class="table-bordered">
                                                            <thead>
                                                                <tr>
                                                                    <th colspan="2">
                                                                        @Html.DisplayFor(modelItem => skill.BasicSkill.Name)
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr>
                                                                    <td rowspan="2" style="width:30%">
                                                                        <img src="@Html.DisplayFor(modelItem => skill.BasicSkill.ImagePath)" class="img-fluid">
                                                                    </td>
                                                                    <td style="width:70%">
                                                                        Charge Time: @Html.DisplayFor(modelItem => skill.BasicSkill.ChargeTime)
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td style="width:70%">
                                                                        @Html.DisplayFor(modelItem => skill.BasicSkill.Description)
                                                                    </td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                    </div>

                                                    @if (count > 2)
                                                    {
                                                        <div class="col-6">
                                                            <table class="table-bordered">
                                                                <thead>
                                                                    <tr>
                                                                        <th colspan="2">
                                                                            @Html.DisplayFor(model => card.PassiveSkill.Name)
                                                                        </th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <tr>
                                                                        <td rowspan="2" style="width:30%">
                                                                            <img src="@Html.DisplayFor(model => card.PassiveSkill.ImagePath)" class="img-fluid">
                                                                        </td>
                                                                        <td>
                                                                            Passive
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            @Html.DisplayFor(model => card.PassiveSkill.Description)
                                                                        </td>
                                                                    </tr>
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    }
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#cardCarousel" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#cardCarousel" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>