@using Microsoft.AspNetCore.Identity
@using KonoFandom.Areas.User.Models

@inject SignInManager<KonoFandomUser> SignInManager
@inject UserManager<KonoFandomUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        @if (User.IsInRole(nameof(Role.Admin)) || User.IsInRole(nameof(Role.Moderator)))
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="User" asp-controller="Admin" asp-action="Index">Database</a>
            </li>
        }
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>
    }
</ul>