@{
    ViewData["Title"] = "Home Page";
}
<!-- Top Page -->

<section id="home-top2">
        <div class="background-top">
            <div class="row">
                <div class="col">
                    <div class="wrapper">
                        <div class="welcome-msg">
                            <div class="row">
                                <div class="col">
                                    <p>Welcome Message</p>
                                </div>
                            </div>
                        </div>
                        <div class="ksfd-logo mt-2 mb-2">
                            <div class="row">
                                <div class="col">
                                    <img src="../assets/img/game-logo.png" class="img-fluid mx-auto d-flex" />
                                </div>
                            </div>
                        </div>
                        <div class="appstore-top">
                            <div class="row">
                                <div class="col">
                                    <a href="https://play.google.com/store/apps/details?id=jp.co.sumzap.pj0007">
                                        <img src="../assets/img/play-store-logo.png" class="img-fluid" />
                                    </a>
                                </div>
                                <div class="col">
                                    <a href="https://apps.apple.com/jp/app/id1438616438">
                                        <img src="../assets/img/app-store-logo.png" class="img-fluid" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="pic">
                        <img class="img-fluid" src="../assets/img/aqua.png" />
                    </div>
                </div>
            </div>
        </div>
</section>

<!-- Carousel -->
<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="../assets/img/app-store-logo.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="../assets/img/play-store-logo.png" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container-fluid orange-bg">
    <div class="row justify-content-center align-items-center">
        <div class="col-6">
            <h1 class="text-center">UPDATES STUFF</h1>
        </div>
        <div class="col-6">
            <h1 class="text-center">EVENT STUFF</h1>
        </div>
    </div>
</div>

